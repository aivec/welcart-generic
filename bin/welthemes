#!/usr/bin/env php
<?php
if (!file_exists(getcwd() . '/vendor/aivec/welcart-generic/composer.json')) {
    echo "\r\n";
    echo 'FATAL: you can only use this binary from the root of your project.';
    echo "\r\n";
    exit(1);
}

@mkdir(getcwd() . '/dist', 0755);
@copy(
    getcwd() . '/vendor/aivec/welcart-generic/themes.css',
    getcwd() . '/dist/themes.css'
);
